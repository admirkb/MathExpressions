<Window x:Class="MathExpressions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathExpressions"
        mc:Ignorable="d"
        Title="{Binding Heading}" Height="199" Width="204">
    <Grid>
        <TextBlock x:Name="textBlockHeading" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Heading}" VerticalAlignment="Top" Width="273"/>

        <Button Command="{Binding SetCompany}"  Content="Calculate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Canvas.Left="414" Canvas.Top="166" Margin="55,71,0,0"/>
        <TextBlock Text="{Binding TextBlockResultMVVM}" HorizontalAlignment="Left" Margin="154,33,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="147" Height="21"/>
        <TextBox Text="{Binding TextBlockInputMVVM}" HorizontalAlignment="Left" Height="21" Margin="10,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
